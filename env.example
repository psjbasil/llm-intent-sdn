# LLM Intent-based SDN Configuration

# API Configuration
LLM_SDN_API_HOST=0.0.0.0
LLM_SDN_API_PORT=8000
LLM_SDN_API_DEBUG=false

# RYU Controller Configuration
LLM_SDN_RYU_HOST=127.0.0.1
LLM_SDN_RYU_PORT=8080
LLM_SDN_RYU_API_BASE=/stats

# LLM Configuration
LLM_SDN_OPENAI_API_KEY=your_openai_api_key_here
LLM_SDN_OPENAI_BASE_URL=https://openrouter.ai/api/v1
LLM_SDN_LLM_MODEL=deepseek/deepseek-chat
LLM_SDN_LLM_TEMPERATURE=0.1
LLM_SDN_LLM_MAX_TOKENS=1000

# Gemini API Configuration
LLM_SDN_GEMINI_API_KEY=your_gemini_api_key_here
LLM_SDN_GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
LLM_SDN_GEMINI_MODEL=models/gemini-1.5-flash
LLM_SDN_USE_GEMINI=false

# Ollama Configuration (for local models)
LLM_SDN_USE_OLLAMA=false
LLM_SDN_OLLAMA_HOST=127.0.0.1
LLM_SDN_OLLAMA_PORT=11434
LLM_SDN_OLLAMA_TIMEOUT=120

# Network Configuration
LLM_SDN_MININET_HOST=127.0.0.1
LLM_SDN_MININET_PORT=6653

# Logging
LLM_SDN_LOG_LEVEL=INFO
LLM_SDN_LOG_FILE=logs/llm_intent_sdn.log

# Intent Processing
LLM_SDN_INTENT_TIMEOUT=30
LLM_SDN_MAX_RETRY_ATTEMPTS=3 
